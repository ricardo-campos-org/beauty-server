# ===========================================
# Beauty Server Environment Configuration
# ===========================================

# ===========================================
# Database Settings
# ===========================================
# PostgreSQL database configuration
POSTGRES_DB=beauty_server
POSTGRES_USER=beauty_user
POSTGRES_PASSWORD=default 
DATABASE_URL=jdbc:postgresql://localhost:5432/beauty_server

# ===========================================
# Auth0 Configuration
# ===========================================
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your_client_id
AUTH0_CLIENT_SECRET=your_secret
AUTH0_AUDIENCE=https://api.beauty-server.com

# ===========================================
# Application Settings
# ===========================================
SPRING_PROFILES_ACTIVE=dev          # Options: dev, default, prod
SERVER_PORT=8080
FRONTEND_URL=http://localhost:3000  # Frontend URL for CORS
API_LOGGING_LEVEL=INFO              # Options: INFO, DEBUG, TRACE

# ===========================================
# Cache Configuration
# ===========================================
CAFFEINE_CACHE_SIZE=1000  # Maximum number of entries
CAFFEINE_CACHE_TTL=30     # Time to live in minutes (5 minutes)
